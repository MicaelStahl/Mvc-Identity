@model List<City>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<br />
<h1 class="offset-2">Index</h1>
<hr />
<br />

<table class="table-active offset-2 col-8 marginBottom60">
    <tr class="row main-tr">
        <th class="offset-1 col-3">Name</th>
        <th class="offset-1 col-3">Population</th>
        <th class="offset-1 col-3">Options</th>
    </tr>
    @if (Model.Count != 0)
    {

        @foreach (var item in Model)
        {
            <tr class="row main-tr">
                <td class="border-bottom border-dark col-10 AlignCenter"></td>
                <td class="offset-1 col-3">@item.Name</td>
                <td class="offset-1 col-3">@item.Population</td>
                <td class="offset-1 col-3">
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="City" asp-route-id="@item.Id">
                        Edit
                    </a>
                    <a class="btn btn-primary" asp-action="Details" asp-controller="City" asp-route-id="@item.Id">
                        Details
                    </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="City" asp-route-id="@item.Id">
                        Remove
                    </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td><h5 class="col-12">I currently don't hold any Cities. please add some :(</h5></td>
        </tr>
    }
</table>

<tr>
    <td>
        <a class="btn btn-success offset-1 floatLeft" asp-action="Create" asp-controller="City">
            Create a new city
        </a>
    </td>
</tr>