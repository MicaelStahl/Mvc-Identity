@model City
@{
    ViewData["Title"] = "Details";
}

<br />
<h1 class="offset-3">Details of @Model.Name</h1>
<hr />
<br />

<table class="table-active offset-2 col-8 marginBottom60">
    <tr class="row main-tr">
        <th class="col-2">Name</th>
        <th class="col-2">Population</th>
        <th class="col-3">Country</th>
        @if (Model.People.Count <= 1)
        {
            <th class="offset-1 col-4">Person</th>
        }
        else if (Model.People.Count > 1)
        {
            <th class="offset-1 col-4">People</th>
        }
    </tr>
    <tr class="row main-tr">
        <td class="border-bottom border-dark col-11 AlignCenter"></td>
        <td class="col-2">@Model.Name</td>
        <td class="col-2">@Model.Population</td>

        @if (Model.Country != null)
        {
            <td class="col-3">Model.Country</td>
        }
        else
        {
            <td class="col-3">Country-less</td>
        }
        <td>
            <table class="table-active">

                @if (Model.People.Count != 0)
                {
                    foreach (var item in Model.People)
                    {
                        <tr class="offset-1 col-4">
                            <td>@item.Name</td>
                            <td>@item.Age</td>
                            <td>@item.Gender</td>
                            <td>@item.PhoneNumber</td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="offset-1 col-4">
                        <td>Abandoned</td>
                        <td>Abandoned</td>
                        <td>Abandoned</td>
                        <td>Abandoned</td>
                    </tr>
                }
            </table>
        </td>
    </tr>
</table>

<tr>
    <td>
        <a class="btn btn-primary offset-2" asp-action="Index" asp-controller="City">
            Return
        </a>
    </td>
</tr>