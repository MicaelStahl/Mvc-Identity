<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/CSS/site.css" rel="stylesheet" />
    <script src="~/bootstrap/jQuery/jquery-3.3.1.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <div id="main-nav" class="row">
            <nav class="navbar-dark nav navbar navbar-expand-sm bg-secondary fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <a class="" href=""><img src="~/Funny_llama.jpg" alt="Logo" id="funny-llama"></a>
                    </div>
                    <ul id="header-list" class="navbar-nav">
                        <li class="nav-item active btn btn-dark">
                            <a asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <li class="nav-item btn btn-dark">
                            <a asp-action="Index" asp-controller="Person">People</a>
                        </li>
                        <li class="nav-item btn btn-dark">
                            <a asp-action="Index" asp-controller="City">Cities</a>
                        </li>
                        <li class="nav-item btn btn-dark">
                            <a asp-action="Index" asp-controller="Country">Countries</a>
                        </li>
                        <li class="nav-item btn btn-dark">
                            <a asp-action="CreateUser" asp-controller="Account">Create User</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                        <li class="nav-item btn btn-dark">
                            <a asp-action="CreateRole" asp-controller="Account">Create Role</a>
                        </li>
                        <li class="nav-item btn btn-dark">
                            <a asp-action="ListOfRoles" asp-controller="Account">List of roles</a>
                        </li>
                            @*<li class="nav-item btn btn-dark">
                                    <a asp-action="CreateUser" asp-controller="Account">Create User</a>
                                </li>*@
                            <li class="nav-item btn btn-dark">
                                <a asp-action="SignOut" asp-controller="Account">Sign out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item btn btn-dark">
                                <a asp-action="SignIn" asp-controller="Account">Sign in</a>
                            </li>
                        }

                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer class=""></footer>
</body>
</html>
